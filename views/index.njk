{% extends "parent.njk" %}

{% block main %}
    <p>OpenHerd is a decentralized, anonymous, location-based message board designed for local conversation without centralized control. You do not need to register an account before participating in the network. <a href="https://openherd.network" target="_blank">You may learn more at openherd.network</a>.</p>
    
    <h1>Local feed</h1>
    {{ notice | safe }}
    {% if posts %}{% endif %}

    {% if posts %}

        {% for post in posts %}
            {% if env.MODERATE_POSTS == "warn" and post.moderated %}
                <details>
                    <summary>Flagged Post</summary>
                    <blockquote>
                        <p>{{ post.text }}</p>
                    </blockquote>
                    <p><abbr title="Show approx location" onclick="window.showMap({{ post.latitude }}, {{ post.longitude }})">{{ post.km }}km ({{ post.mi}}mi) away approx.</abbr> &bull; <a href="/post/{{post.id}}">View replies</a> &bull; <time datetime="{{ post.createdAt }}">{{ post.createdAt | getLocaleDate(post.createdAt) }} ({{ post.createdAt | getPrettyDate(post.createdAt) }})</time>
                    </p>
                </details>
            {% elif env.MODERATE_POSTS == "hide" and post.moderate %}

            {% else %}
                <blockquote>
                    <p>{{ post.text }}</p>
                </blockquote>
                <p><abbr title="Show approx location" onclick="window.showMap({{ post.latitude }}, {{ post.longitude }})">{{ post.km }}km ({{ post.mi}}mi) away approx.</abbr> &bull; <a href="/post/{{post.id}}">View replies</a> &bull; <time datetime="{{ post.createdAt }}">{{ post.createdAt | getLocaleDate(post.createdAt) }} ({{ post.createdAt | getPrettyDate(post.createdAt) }})</time>
                </p>
                <hr>
            {% endif %}
        {% endfor %}

    {% else %}
        <p>No posts! Why not make one?</p>
    {% endif %}

{% endblock %}